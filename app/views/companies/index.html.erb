<%=link_to "Add companies",new_company_path%><br>
<%if (user_signed_in?)%>
	add questions
	<%=form_for @question do |f|%>
		<%=f.text_field :question%>
		<%=f.hidden_field :user_id,value:current_user.id%>
		<%=f.submit%>
	<%end%>		
	<%Question.all.each do |q|%>
		<%if (q.user.company_id === current_user.company_id)%>
			<%=q.question%><%if current_user.id == q.user_id%><%=link_to "edit",edit_question_path(q.id)%><%end%>
			<%=form_for Answer.new do |f|%>
				<%=f.text_field :answer%>
				<%=f.hidden_field :question_id,value:q.id%>
				<%=f.hidden_field :user_id,value:q.id%>
				<%=f.submit%>
		  <%end%>
		  <%q.answers.each do |a|%>
		  	<%=a.answer%>
		  <%end%>
		<%end%>
		<br>
	<%end%>
<%end%>